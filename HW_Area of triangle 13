import java.io.*;
import java.util.*;
import java.text.*;
import java.math.*;
import java.util.regex.*;

public class Solution {

    public static void main(String[] args) {
         Scanner sc=new Scanner(System.in);
        double h=sc.nextDouble();
        double b=sc.nextDouble();
        double a=(h*b)*1/2;
        System.out.println(a);
        
    }
}
